    "tup = (1, 2, 3, 4, 5)\n",
    "element = int(input(\"Введите элемент для удаления: \"))\n",
    "new_tup = tuple(x for x in tup if x != element)\n",
    "print(\"После удаления:\", new_tup)\n",
    "\n",
    "# b)\n",
    "tuples_of_tuples = ((1, 6, 7), (2, 3, 8), (4, 5, 9))\n",
    "averages = []\n",
    "for t in tuples_of_tuples:\n",
    "    nums = [x for x in t if x > 5]\n",
    "    avg = sum(nums) / len(nums) if nums else 0\n",
    "    averages.append(avg)\n",
    "print(\"Средние значения:\", averages)"
