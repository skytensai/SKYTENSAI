    "# a)\n",
    "tup = (1, \"a\", 3, \"b\", 5)\n",
    "element = int(input(\"Введите число для поиска: \"))\n",
    "for i, x in enumerate(tup):\n",
    "    if isinstance(x, (int, float)) and x == element:\n",
    "        print(f\"Позиция: {i}\")\n",
    "        break\n",
    "else:\n",
    "    print(\"Не найдено\")\n",
    "\n",
    "# b)\n",
    "tup = (3, 6, 9, 2, 12)\n",
    "nums = [str(x) for x in tup if x % 3 == 0]\n",
    "big_num = int(''.join(nums)) if nums else 0\n",
    "print(\"Большое число:\", big_num)"
   ]
